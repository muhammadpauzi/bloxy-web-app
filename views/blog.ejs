<div class="row py-4">
    <div class="col-md-8 mx-auto">
        <div class="p-4 shadow-sm mb-2">
                <a href="/" class="btn btn-light"><i class='bx bx-left-arrow-alt' ></i> Go back to home</a>
                <h1 class="my-4 fw-normal fw-bold"><%= blog.title %></h1>
                <div>
                    <span><%= blog.user.name %></span>
                    <span> - </span>
                    <span class="text-secondary"><%= blog.createdAt.toLocaleString() %></span>
                </div>
                <div class="row">
                    <div class="col py-5 blog-field">
                        <%- blog.sanitizedHtml %>
                    </div>
                </div>
                <div class="py-2 mt-4">
                    <% if(blog.createdAt.toLocaleString() != blog.updatedAt.toLocaleString()) { %>
                        <span class="text-secondary">Modified at <%= blog.updatedAt.toLocaleString() %></span>
                    <% } %>
                </div>
        </div>
    </div>
</div>