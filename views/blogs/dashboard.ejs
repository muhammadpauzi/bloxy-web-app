<div class="row">
    <div class="col">
        <h1>Dashboard</h1>
        <p class="text-secondary mt-3">Welcome <span class="fw-bold text-dark"><%= user.username %>!</span></p>

        <% if(typeof message !== 'undefined' ){ %>
        <div class="alert alert-<%= message.type %>" role="alert">
            <%= message.message %>
        </div>
        <% } %>

        <div class="row">
            <div class="col-lg-8">
            <% if(blogs.length == 0){ %>
                <div class="row">
                    <div class="col py-5 text-center">
                    <p class="fw-bold text-danger">Blog not added yet.</p>
                    <a href="/blogs/create">Create blog</a>
                    </div>
                </div>
            <% } %> 
            
            <% blogs.map(blog => { %> 
                <div class="p-4 shadow-sm mb-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="/blog/<%= blog.slug %>" class="fs-5 fw-normal text-decoration-none text-dark"><%= blog.title %></a>
                        <!-- Default dropstart button -->
                        <div class="btn-group dropstart">
                            <button type="button" class="btn btn-light dropdown-toggle d-flex align-items-center justify-content-center" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class='bx bx-menu-alt-right bx-sm'></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/blogs/delete/<%= blog._id %>" class="dropdown-item text-danger d-flex align-items-center py-2" onclick="return confirm('Are you sure to delete this blog?');">
                                        <div class="pe-2 d-flex align-items-center">
                                            <i class='bx bx-trash bx-sm'></i>
                                        </div>
                                        <span>Delete</span>
                                    </a>
                                    <button class="dropdown-item d-flex align-items-center py-2" type="button">
                                        <div class="pe-2 d-flex align-items-center">
                                            <i class='bx bx-message-square-edit bx-sm' ></i>
                                        </div>
                                        <span>Edit</span>
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <p class="text-secondary fw-light mt-2"><%= blog.description %></p>
                    <div>
                        <span class="text-danger pe-1">10 likes</span>
                        <span class="text-success px-1">125 views</span>
                    </div>
                </div>
            <% }); %> 
            </div>
            <div class="col-lg-4">
                <div class="p-4 shadow-sm mb-1">
                    <h4 class="fs-5 fw-normal text-decoration-none text-dark mb-3">Filter blogs</h4>
                    <div class="mb-3">
                        <label for="search" class="form-label">Search</label>
                        <input type="text" class="form-control" id="search">
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="sort" class="form-label">Sort by</label>
                                <select class="form-select" aria-label="Default select example" id="sort">
                                    <option value="1">Date</option>
                                    <option value="2">Like</option>
                                    <option value="3">View</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3">
                                <label for="sort" class="form-label">Sort by</label>
                                <select class="form-select" aria-label="Default select example" id="sort">
                                    <option value="1">Asc</option>
                                    <option value="2">Desc</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary w-100">Filter</button>
                </div>
            </div>
        </div>
    </div>
</div>